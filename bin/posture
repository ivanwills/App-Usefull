use strict;
use warnings;
use version;
use Scalar::Util;
use List::Util;
#use List::MoreUtils;
use Getopt::Long;
use Pod::Usage;
use Data::Dumper qw/Dumper/;
use English qw/ -no_match_vars /;
use FindBin qw/$Bin/;
use UI::Dialog;

our $VERSION = version->new('0.0.1');
my ($name)   = $PROGRAM_NAME =~ m{^.*/(.*?)$}mxs;

my %option = (
    posture => 30,
    eyes    => 59,
    time    => 60,
    verbose => 0,
    man     => 0,
    help    => 0,
    VERSION => 0,
);

main();
exit 0;

sub main {

    Getopt::Long::Configure('bundling');
    GetOptions(
        \%option,
        'posture|p=i',
        'eyes|e=i',
        'time|t=i',
        'verbose|v+',
        'man',
        'help',
        'VERSION!',
    ) or pod2usage(2);

    if ( $option{'VERSION'} ) {
        print "$name Version = $VERSION\n";
        exit 1;
    }
    elsif ( $option{'man'} ) {
        pod2usage( -verbose => 2 );
    }
    elsif ( $option{'help'} ) {
        pod2usage( -verbose => 1 );
    }

    # do stuff here
    my $dialog = UI::Dialog->new;
    my $i = 0;
    my $size = length $option{posture} * $option{eyes};

    while (1) {
        sleep $option{time};
        print {*STDERR} sprintf "%${size}i ", $i++ if $option{verbose};
        my $new_line = 0;
        if ( $i % $option{posture} == 0 ) {
            $new_line ++;
            $dialog->msgbox(title => "Posture", text => "Sit up straight");
        }
        if ( $i % $option{eyes} == 0 ) {
            $new_line++;
            $dialog->msgbox(title => "Eyes", text => "Look into the distance!");
        }
        print "\n" if $option{verbose} && $new_line;
        if ( $new_line == !!$option{posture} + !!$option{eyes} ) {
            return if !$option{time};
            $i = 0;
        }
    }

    return;
}

__DATA__

=head1 NAME

posture - Reminds you with a dialog when you need to check you posture

=head1 VERSION

This documentation refers to posture version 0.1.

=head1 SYNOPSIS

   posture [option]

 OPTIONS:
  -p --posture=min   The number of minutes between reminding to check posture
  -e --eyes=min      The number of minutes between reminding to look into the distance
  -t --time=sec      Set the number of seconds in a minute (useful for testing)

  -v --verbose       Show more detailed option
     --version       Prints the version information
     --help          Prints this help information
     --man           Prints the full documentation for posture

