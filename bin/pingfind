use strict;
use warnings;
use version;
use Scalar::Util;
use List::Util;
#use List::MoreUtils;
use Getopt::Long;
use Pod::Usage;
use Data::Dumper qw/Dumper/;
use English qw/ -no_match_vars /;
use FindBin qw/$Bin/;

our $VERSION = version->new('0.0.1');
my ($name)   = $PROGRAM_NAME =~ m{^.*/(.*?)$}mxs;

my %option = (
    pause   => 20,
    min     => 1,
    max     => 254,
    verbose => 0,
    man     => 0,
    help    => 0,
    VERSION => 0,
);

main();
exit 0;

sub main {

    Getopt::Long::Configure('bundling');
    GetOptions(
        \%option,
        'fork|f!',
        'pause|p=i',
        'min=i',
        'max=i',
        'verbose|v+',
        'man',
        'help',
        'VERSION!',
    ) or pod2usage(2);
    my $net = shift @ARGV || '10.1.1';

    if ( $option{'VERSION'} ) {
        print "$name Version = $VERSION\n";
        exit 1;
    }
    elsif ( $option{'man'} ) {
        pod2usage( -verbose => 2 );
    }
    elsif ( $option{'help'} ) {
        pod2usage( -verbose => 1 );
    }

    # do stuff here
    my $sleep = int $option{pause} / 4 ? int $option{pause} / 4 : 1;

    for my $i ( $option{min} .. $option{max} ) {
        my $child = $option{fork} && fork;

        if ( $child ) {
            # parent stuff
            sleep $sleep if $i % $option{pause} == 0;
        }
        else {
            # child code
            my $out = `ping -c3 $net.$i`;

            print "Found $net.$i\n" if $out !~ /100\% packet loss/;
            exit if $option{fork};
        }
    }

    return wait;
}

__DATA__

=head1 NAME

pingfind - Finds IP addresses on the network by pinging for them

=head1 VERSION

This documentation refers to pingfind version 0.1.

=head1 SYNOPSIS

   pingfind [option] aaa.bbb.ccc

 OPTIONS:
  -f --fork    Fork for each ping to parrelleise the search (Default)
     --no-fork Turn off forking each ping

  -v --verbose Show more detailed option
     --version Prints the version information
     --help    Prints this help information
     --man     Prints the full documentation for pingfind

