use strict;
use warnings;
use version;
use Scalar::Util;
use List::Util;
#use List::MoreUtils;
use Getopt::Long;
use Pod::Usage;
use Data::Dumper qw/Dumper/;
use English qw/ -no_match_vars /;
use FindBin qw/$Bin/;

our $VERSION = version->new('0.0.1');
my ($name)   = $PROGRAM_NAME =~ m{^.*/(.*?)$}mxs;

my %option = (
    size    => 2048,
    verbose => 0,
    man     => 0,
    help    => 0,
    VERSION => 0,
);

main();
exit 0;

sub main {

    Getopt::Long::Configure('bundling');
    GetOptions(
        \%option,
        'size|s=i',
        'test|t',
        'verbose|v+',
        'man',
        'help',
        'version',
    ) or pod2usage(2);

    if ( $option{'version'} ) {
        print "$name Version = $VERSION\n";
        exit 1;
    }
    elsif ( $option{'man'} ) {
        pod2usage( -verbose => 2 );
    }
    elsif ( $option{'help'} ) {
        pod2usage( -verbose => 1 );
    }

    # do stuff here
    while (my $line = <>) {
        chomp $line;
        $line =~ s/\s+$//;

        last if $line eq '.';

        my @files = $line =~ /^\// ? split /\s(?=\/)/, $line : split /\s?file:\/\//, $line;
        for my $file (@files) {
            next if !$file;

            $file =~ s/%([\dA-Fa-f]{2})/chr(hex($1))/egxms;

            my $cmd = "cp '$file' .";
            print "$cmd\n";
            if ( ! -f $file ) {
                warn "Can't copy $file: Doesn't exist\n";
                next;
            }
            system $cmd if !$option{test};
        }
    }

    mkdir 'out' if !-d 'out';

    my $cmd = "img-resize --in . --out ./out --height $option{size} --width $option{size} --no-delete --verbose";
    print "$cmd\n";
    system "$cmd" if !$option{test};

    return;
}

__DATA__

=head1 NAME

fspot-cp - Copies files selected in f-spot, and makes smaller versions available for uploading to google+

=head1 VERSION

This documentation refers to fspot-cp version 0.1.

=head1 SYNOPSIS

   fspot-cp [option]
   # paste copied files, then press Ctl-D to resize.

 OPTIONS:
  -s --size[=]int    The maximum dimentions to resize the images to for uploading
  -t --test          Don't actually copy or resize any files, just show what would happen

  -v --verbose       Show more detailed option
     --version       Prints the version information
     --help          Prints this help information
     --man           Prints the full documentation for fspot-cp

