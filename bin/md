#!/bin/bash

t=$(tempfile) || exit

if [ ! "$1" ]; then
    echo Usage:
    echo '    md markdown-file.md'
    echo
    echo 'Cheadsheet: https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet'
    exit 1
fi

if [ "$(which md2man-roff)" ]; then
    md2man-roff "$1" > "$t"
elif [ "$(which go-md2man)" ]; then
    go-md2man -in="$1" -out="$t"
fi

man -l "$t"

rm "$t"
