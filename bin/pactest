#!/bin/bash

URL=$1
RC=~/.packtest.rc
TEMP="$(tempfile)"

if [ ! "$URL" ]; then
    echo Usage pactest URL
    exit 1
fi

if [ ! -f "${RC}" ]; then
    echo You haven\'t added any pac URLs to your $RC file
    exit 2
fi

for pac in $(cat "${RC}"); do
    echo $pac
    wget -qO "${TEMP}" "${pac}"
    pactester -p "${TEMP}" -u "${URL}"
done

rm "${TEMP}"
