# $Revision$, $Source$, $Date$

use strict;
use warnings;
use Getopt::Alt qw/get_options/;
use Pod::Usage;
use Data::Dumper qw/Dumper/;
use English qw/ -no_match_vars /;
use FindBin qw/$Bin/;

our $VERSION = '0.1';
my ($name)   = $PROGRAM_NAME =~ m{^.*/(.*?)$}mxs;

my %option = (
    verbose => 0,
    man     => 0,
    help    => 0,
    VERSION => 0,
);

if ( !@ARGV ) {
    pod2usage( -verbose => 1 );
}

main();
exit 0;

sub main {

    my $opt = get_options(
        { helper => 1, default => \%option, },
        [
            'verbose|v+',
        ],
    );

    my $max = 8;
    for my $module (@ARGV) {
        $max = length $module if $max < length $module;
    }

    my $show_inc = 0;
    for my $module (@ARGV) {
        my $file = $module;
        $file =~ s{::}{/}gxms;
        $file .= '.pm';

        require $file;

        my $VERSION = "\$$module\::VERSION";
        my $ver = do { no strict 'refs'; $$VERSION }; ## no critic
        print "$module " . ' ' x ( $max - length $module) . "- $ver";
        if ( $opt->verbose ) {
            my $found = 0;
            for my $inc (@INC) {
                next if !-f "$inc/$file";

                print " ($inc/$file)";
                last if $opt->verbose == 1;
                $found++;
            }
            $show_inc = 1 if $found > 1;
        }
        print "\n";
    }

    if ($show_inc) {
        print "\@INC:\n\t", join "\n\t", @INC;
        print "\n";
    }

    return;
}

__DATA__

=head1 NAME

pmver - Show the version of a Perl Module

=head1 VERSION

This documentation refers to pmver version 0.1.

=head1 SYNOPSIS

   pmver [option]

 OPTIONS:
  -o --other         other option

  -v --verbose       Show more detailed option
     --version       Prints the version information
     --help          Prints this help information
     --man           Prints the full documentation for pmver

