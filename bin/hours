#!/usr/bin/perl

# Created on: 2010-08-30 09:02:49
# Create by:  Ivan Wills
# $Id$
# $Revision$, $HeadURL$, $Date$
# $Revision$, $Source$, $Date$

use strict;
use warnings;
use version;
use Scalar::Util;
use List::Util qw/sum max/;
use List::MoreUtils qw/zip/;
use Getopt::Alt qw/get_options/;
use Pod::Usage;
use Data::Dumper qw/Dumper/;
use English qw/ -no_match_vars /;
use FindBin qw/$Bin/;
use Path::Class;
use Text::CSV_XS;
use Class::Date qw/now/;
use Term::ANSIColor;

our $VERSION = version->new('0.0.1');
my ($name)   = $PROGRAM_NAME =~ m{^.*/(.*?)$}mxs;
my $file     = file( $ENV{HOME} . "/.$name" );

use constant {
    HOUR   => 60 * 60,
    MINUTE => 60,
};
my %option = (
    fmt         => '%10day %6start %3lunch %6end %12avg %10total',
    work_day    => 8,
    lunch_break => 30,
    bin         => 15,
    verbose     => 0,
    man         => 0,
    help        => 0,
    VERSION     => 0,
);
my %labels = (
    stddev => [ 'Standard Deviation', 'StdDev' ],
    avg    => [ 'Average to Date', 'Avg to Date', 'Avg' ],
    day    => [ qw/Date / ],
    total  => [ 'Day Length', 'Total' ],
    days   => [ qw/Days / ],
    lunch  => [ qw/Lunch  Lch / ],
    end    => [ qw/Finish End / ],
    start  => [ qw/Start / ],
);

main();
exit 0;

sub main {

    my $opt = get_options(
        {
            default => \%option,
            helper  => 1,
            bundle  => 1,
        },
        [
            'history|h=i',
            'more|m+',
            'now|n=s',
            'between|b=s',
            'full|f',
            'percent|p=f',
            'work_day|work-day|w=f',
            'lunch_bread|l=f',
            'round|r=i',
            'bin|i=i',
            'fmt|format|M=s',
            'verbose|v+',
        ]
    ) or pod2usage(2);
    %option = %{ $opt };
    $option{work_day} *= HOUR;
    $option{lunch_break} ||= 0;
    $option{lunch_break} *= MINUTE;

    # increase the number of days shown
    if ( $option{more} ) {
        $option{between}
            = $option{more} == 1 ? now() - '1M'
            : $option{more} == 2 ? now()->clone(month => 1, day => 1)
            :                     now() - "$option{more}Y";
        $option{between} = $option{between}->ymd;
    }

    $option{more} = 1 if $option{between};
    $option{history} ||= 5 if !$option{more};

    my $action = shift @ARGV || '';

    my $tmp
        = $action eq 'add'   ? add()
        : $action eq 'stats' ? stats()
        : $action eq 'list'  ? list()
        :                      stats();

    return $tmp;
}

sub add {

    my $csv = get_csv();
    my $date;
    my @rewrite;
    while ( my $fields = get_fields() ) {
        next if !$fields->[0] || $fields->[0] eq '';
        push @rewrite, $fields;

        $date = $fields->[0];
    }

    my $now = $option{now} ? Class::Date->new( $option{now} ) || Class::Date->new( now()->strftime('%Y-%m-%d ') . $option{now} ) : now();
    open my $fh, '>', $file or die "Could not open $file for reading: $OS_ERROR\n";
    for my $i ( 0 .. @rewrite - 2 ) {
        $csv->combine(@{ $rewrite[$i] });
        print {$fh} $csv->string . "\n";
    }

    if ($date eq $now->strftime('%Y-%m-%d')) {
        $csv->combine(@{ $rewrite[-1] }, $now->strftime('%H:%M'));
        print {$fh} $csv->string . "\n";
    }
    else {
        $csv->combine(@{ $rewrite[-1] });
        print {$fh} $csv->string . "\n";
        $csv->combine($now->strftime('%Y-%m-%d'), $now->strftime('%H:%M'));
        print {$fh} $csv->string . "\n";
    }
    close $fh;

    return;
}

sub list {

    my ($lines) = get_records();

    my ($start, $end) = split /:/, $option{between} || '', 2;
    $start = $start ? Class::Date->new($start) : undef;
    $end   = $end   ? Class::Date->new($end)   : undef;

    my $now    = now();
    my $grand = 0;
    my $count = 0;
    my $last;
    my $total;
    my $day_parts;
    my $previous;
    my @times;

    if ( $option{verbose} ) {
        print "Date            ";
        if ( $option{verbose} > 1 ) {
            print "Start  Lch Finish";
            if ( $option{verbose} > 2 ) {
                print "   Avg to Date ";
            }
            else {
                print "       ";
            }
        }
        print "Day Length\n";
    }
    #my %yaml = ( times => [] );
    my @headings = @{[qw/date in start finish out/]};


    RECORD:
    while ( my ( $row, $line_no ) = get_fields() ) {
        next RECORD if !$option{more} && $line_no + $option{history} - 1 < $lines;

        my @fields = @$row;
        my $date = shift @fields;
        my $day = Class::Date->new($date);
        next RECORD if $start && $day < $start;
        next RECORD if $end   && $day > $end;
        #push @{ $yaml{times} }, { zip @headings, @{$row} };

        $total = Class::Date::Rel->new(0);
        $day_parts = @fields;

        for ( my $i = 0; $i < @fields; $i += 2 ) {
            last RECORD if $option{full} && !$fields[$i + 1];
            my $start = round( Class::Date->new("$date " . $fields[$i]), 0 );
            my $end = round( defined $fields[$i + 1] ? Class::Date->new("$date " . $fields[$i + 1]) : $now, 1 );
            $fields[$i  ] = $start->strftime('%H:%M');
            $fields[$i+1] = $end->strftime('%H:%M');

            $total += $end - $start;
        }

        push @times, $total;
        $grand += $total;
        $count++;

        if ( $option{verbose} ) {
            my $day = Class::Date->new($date);
            if ( $previous && ( $option{more} || $option{history} > 5 ) && ($day - $previous)->day > 1 ) {
                print "\n";
            }

            my $avg = $grand / $count;
            my $Hour = $total / HOUR;
            my $colour
                = $Hour >= 8.5 ? 'green'
                : $Hour <  7   ? 'red'
                : $Hour <  7.8 ? 'yellow'
                :                '';
            $colour
                .= $total < $avg - 5 * MINUTE ? ' underline'
                :  $total > $avg + 5 * MINUTE ? ' bold'
                :                            '';
            my ($hour, $min, $sec) = time_parts($total);
            print "$date";

            if ( $option{verbose} > 1 ) {
                if ( @fields == 4 || @fields == 3 ) {
                    my $mins = sprintf "%3d", int ( (round(Class::Date->new("$date $fields[2]"), 1) - round(Class::Date->new("$date $fields[1]")) ) / MINUTE );
                    $fields[3] ||= now()->strftime('%H:%M');
                    print "\t$fields[0]  $mins $fields[-1] ";
                }
                elsif ( @fields == 2 ) {
                    my $mins = sprintf "%3d", int ( (round(now(), 1) - round(Class::Date->new("$date $fields[1]"))) / MINUTE );
                    print "\t$fields[0]  $mins       ";
                }
                else {
                    print "\t$fields[0]            ";
                }
                #print "\t(" . ( join "\t", @fields ) . ')';

                if ( $option{verbose} > 2 ) {
                    my ($hour, $min) = time_parts($avg);
                    print "    $hour\:$min    "
                }
            }

            print "\t" . colored( "$hour:$min", $colour ) . "\n";
            $previous = $day;
        }

        $last = $day if !$last || $last < $day;
    }
    return if !$count;

    my $avg = $grand / $count;
    my ($hour, $min, $sec) = time_parts($avg);
    print "Average: $hour:$min:$sec (for $count days)\n";

    if ( !$option{full} && ( $last->year == $now->year && $last->month == $now->month && $last->day == $now->day ) ) {
        my $one_day = $option{work_day};

        my $spare =  $one_day * int $avg / $option{work_day};
        my $left = $one_day - ( $avg - $spare );
        my $hour_8pm = $now->clone;
        $hour_8pm += (20 - $hour_8pm->hour) * HOUR;

        if ( $left > 0 && $now + $left < $hour_8pm ) {
            $left += $option{lunch_break} if $now->hour < 13;
            my ($hour, $min, $sec) = time_parts($left);
            print "Leave in $hour:$min:$sec\n";
            my $leave = $now + $left;
            print "         " . $leave->meridiam . "\n";
            if ($spare) {
                $spare /= $one_day;
                print "Spare:   $spare day" . ($spare > 1 ? 's' : '') . "\n";
            }
        }
        else {
            print "Leave now\n";
        }
        if ( $day_parts < 3 ) {
            $total -= $option{lunch_break};
        }
        if ( $total < $one_day ) {
            my $left = now() + Class::Date::Rel->new( $one_day - $total );
            print "Leave at " . $left->meridiam . " for 8 hour day\n";
        }
    }
    if ( $option{verbose} ) {
        my $stddev = sum map { ( $_ - $avg ) ** 2 } @times;
        $stddev = sqrt $stddev / @times;
        my ($hour, $min, $sec) = time_parts($stddev);
        print "The standard deviation is $hour\:$min\:$sec\n";
    }

    #my $yml = file($ENV{HOME}, '.hours.yml');
    #my $fh = $yml->openw;
    #print {$fh} Dump(\%yaml);

    return;
}

sub round {
    my ( $date, $down ) = @_;

    return $date if !$option{round};

    my $out = "$date ";
    my $round = abs $option{round};
    if ( $option{round} < 0 ) {
        $down = $date->min % $round < $round / 2;
    }

    if ( $date->min % $round != 0 ) {
        if ( $down ) {
            # Round down
            my $diff = ( $date->min % $round ).'m';
            $date = $date - $diff;
        }
        else {
            # round up
            my $diff = ( $round - ($date->min + $round) % $round ).'m';
            $date = $date + $diff;
        }
    }
    #warn "$down .. $out => $date\n";

    return $date;
}

sub stats {
    my $stats = raw_stats( $option{history} );
    my $last;

    print colored( sprinthead(), 'bold' ), "\n";
    my $days = 0;
    for my $day ( @{ $stats } ) {
        print "\n" if $last && $day->{day} > $last->{day} + '1D';
        $days += $day->{days};

        my $hour = $day->{total} / HOUR;
        my $work_day = $day->{days} == 1 ? $option{work_day} : $option{work_day} / 2;
        my $colour
            = $hour >= $work_day * 8.5 / 8 / HOUR ? 'green'
            : $hour <  $work_day * 7 / 8   / HOUR ? 'red'
            : $hour <  $work_day * 7.8 / 8 / HOUR ? 'yellow'
            :                                               '';
        $colour
            .= $day->{total} < $day->{avg} - $day->{stddev} ? ' underline'
            :  $day->{total} > $day->{avg} + $day->{stddev} ? ' bold'
            :                                                 '';
        print sprintday( $option{fmt}, { total => $colour }, %$day ), "\n";

        $last = $day;
    }

    my $days_worked = $last->{half_days} ? $days - $last->{half_days} * 0.5 . " days and $last->{half_days} half days" : "$days days";
    print "\n";
    print "Average      : " . time_str( $last->{avg}, 'sec' ) . " (for $days_worked)\n";
    print "Std Deviation: " . time_str($last->{stddev}, 'sec') . "\n";

    # determine if lunch break is still expected
    my $lunch = !$last->{lunch} || $last->{lunch} eq 'N/A' ? $option{lunch_break} : 0;

    # check if the last day in the stats represents today
    if ( ! $last->{end} || $last->{end} eq now()->strftime('%H:%M') ) {
        my %leave;

        # workout if work today is less that nominal workday
        my $total = $last->{total} - $lunch;
        if ( $total < $option{work_day} ) {
            my $day = sprintf "%.1f", $option{work_day} / HOUR;
            $day =~ s/[.]0$//xms;
            my $leave = now() - $total + $option{work_day};
            $leave{ $leave->epoch }
                = "For $day hour day\n"
                . "Leave at:      " . ( $leave->meridiam ) . "\n"
                . "               " . time_str( ( $option{work_day} ) - $total, 'sec' ) . "\n";
        }

        # determine if still need to work to maintain average day length
        if ( @{$stats} >= 2 ) {
            if ( $stats->[-2]{avg} > $last->{total} + $lunch ) {
                my $till = $stats->[-2]{avg} - $last->{total} + $lunch;
                my $leave = now() + $till;
                $leave{ $leave->epoch }
                    = "For average day\n"
                    . "Leave at:      " . $leave->meridiam . "\n"
                    . "               " . time_str( $till, 'sec' ) . "\n";
            }
            else {
                print "For average day leave now\n";
            }
        }

        # Check if need to make up hours to get average matching work day length
        if ( $last->{avg} < $option{work_day} ) {
            my $till = ( $option{work_day} - $last->{avg} ) * $days + $lunch;
            my $leave = now() + $till;
            $leave{ $leave->epoch }
                = "For minimum day to average at workday length\n"
                . "Leave at:      " . $leave->meridiam . "\n"
                . "               " . time_str( $till, 'sec' ) . "\n";
        }

        print "\n";
        for my $leave ( sort keys %leave ) {
            print $leave{$leave};
        }
    }

    # determine if you have worked overtime
    $days  = ( $last->{avg} - $option{work_day} ) * $days / $option{work_day};
    if ( $days < -1 || $days > 1 || $option{verbose} ) {
        my ($time, $colour) = $days < 0 ? ( 'undertime', 'red' ) : ('overtime', 'green' );
        print colored( "You have " . time_str(abs $days * $option{work_day}, $option{verbose}) ."in $time\n", $colour );
    }

    # show binned stats of day lengths
    if ( $option{verbose} > 1 ) {
        my %bin;
        for my $stat (@{ $stats }) {
            $bin{ time_trunc( $stat->{total}, $option{bin} ) }++;
        }
        my $max = max values %bin;
        print "\nTime  : Num days worked for that long\n";
        for my $key ( sort { $a <=> $b } keys %bin ) {
            my $colour
                = $key >= $option{work_day} * 8.5 / 8 ? 'green'
                : $key <  $option{work_day} * 7.0 / 8 ? 'red'
                : $key <  $option{work_day} * 7.8 / 8 ? 'yellow'
                :                                              '';
            printf "%s : %3i %s\n", time_str($key), $bin{$key}, colored( '*' x (($bin{$key} / $max) * 50), $colour );
        }
    }
    if ( $option{percent} || $option{verbose} > 3 ) {
        $option{percent} ||= $last->{stddev} / $option{work_day} * 100;
        for my $day ( @{ $stats } ) {
            time_collector($day->{day}, $day->{total} / HOUR);
        }
    }
    time_display() if $option{percent};
}

sub sprinthead {
    my @parts = split /%(\d*\w+)/, $option{fmt};
    my $fmt   = shift @parts;
    my $out   = '';
    my $data  = 1;

    while ( my $part = shift @parts ) {
        if ( $data ) {
            my ($size, $type) = $part =~ /^(\d*)(.*)$/xms;
            my $label;
            for my $type_label ( @{ $labels{$type} } ) {
                if ( $size && $size >= length $type_label ) {
                    $label = $type_label;
                    last;
                }
            }
            $label ||= $labels{$type}[-1];
            if ( $size && $size < length $label ) {
                $size = length $label;
            }
            $size ||= '';
            $out .= sprintf "%${size}s", $label;
            $fmt .= "%$size$type";
        }
        else {
            $out .= $part;
            $fmt .= $part;
        }
        $data = !$data;
    }

    $option{fmt} = $fmt;
    return $out;
}

sub sprintday {
    my ($fmt, $meta, %day) = @_;
    $meta ||= {};
    $day{day}    = $day{day}->ymd('-');
    $day{end}  ||= '';
    $day{avg}    = time_str($day{avg});
    $day{total}  = time_str($day{total});
    $day{stddev} = time_str($day{stddev});

    my @args;
    $fmt =~ s/%(\d*)(\w+)/sprintday_part( $1, $meta->{$2}, $day{$2}, $2 )/egxms;

    return $fmt;
}

sub sprintday_part {
    my ( $size, $colour, $value, $type ) = @_;
    my $out = '';

    if ($size) {
        $out .= ' ' x ( $size - length $value );
    }
    if ( $type eq 'lunch' && !$value ) {
        $out .= ' ';
    }

    $out
        .= $colour ? colored( $value, $colour )
        :            $value || '';

    return $out;
}

sub raw_stats {
    my ($records) = @_;
    my @stats;
    my ($lines) = get_records();

    $option{between} ||= '';
    $option{between} =~ s{/}{-}g;
    my ($start, $end) = split /:/, $option{between} || '', 2;
    $start = $start ? Class::Date->new($start) || die "Bad start date" : undef;
    $end   = $end   ? Class::Date->new($end)   || die "Bad end date"   : undef;
    my $today = Class::Date->new( now->strftime('%Y-%m-%d') );
    my $days = 0;
    my $half_days = 0;

    my $now    = now();

    RECORD:
    while ( my ( $row, $line_no ) = get_fields() ) {
        next RECORD if ( !$option{more} && !$option{between} ) && $line_no + $option{history} - 1 < $lines;

        my @fields = @$row;
        my $date = shift @fields;
        my $day = Class::Date->new($date);
        next RECORD if $start && $day < $start;
        next RECORD if $end   && $day > $end;

        my $total = Class::Date::Rel->new(0);
        my $last;
        my $lunch = 0;

        for ( my $i = 0; $i < @fields; $i += 2 ) {
            last RECORD if $option{full} && !$fields[$i + 1];
            my $start = round( Class::Date->new("$date " . $fields[$i]), 0 );
            my $end;
            if ( defined $fields[$i + 1] ) {
                $end = round(Class::Date->new("$date " . $fields[$i + 1]), 1 );
            }
            else {
                $end = round($now, 1 );
                $fields[$i + 1] = $now->hms;
            }
            $fields[$i  ] = $start->strftime('%H:%M');
            $fields[$i+1] = $end->strftime('%H:%M');

            $total += $end - $start;
            if ( $last ) {
                $lunch += int ( ( round(Class::Date->new($start), 1) - round(Class::Date->new($last)) ) / MINUTE );
            }
            $last = $end;
        }

        $lunch ||= 'N/A';

        push @stats, {
            day   => $day,
            total => $total,
            start => $fields[0],
            end   => $fields[-1],
            lunch => $lunch,
        };

        # TODO improve these calculations so that they don't make things too slow
        $days += $stats[-1]{days}   = @fields <= 2 && $day != $today ? 0.5 : 1;
        $half_days++ if @fields <= 2 && $day != $today;

        my $avg    = ( sum map { $_->{total} } @stats ) / $days;
        my $stddev = sum map { ( $_->{total} - $avg ) ** 2 } @stats;

        $stats[-1]{stddev}    = sqrt $stddev / $days;
        $stats[-1]{avg}       = $avg;
        $stats[-1]{half_days} = $half_days;
    }

    if ( $records && $records < @stats && $option{more} < 2 ) {
        @stats = @stats[ -$records .. -1 ];
    }

    return \@stats;
}

sub time_parts {
    my ($time) = @_;
    my $day      = int $time / $option{work_day};
    my $hour     = int $time / HOUR;
    my $day_hour = $hour - $day * $option{work_day} / HOUR;
    my $min      = int $time / MINUTE;
    my $sec      = int $time - $min * MINUTE;
    $min -= $hour * MINUTE;
    $hour = "0$hour"     if $hour < 10;
    $min  = "0$min"      if $min  < 10;
    $sec  = "0$sec"      if $sec  < 10;
    return ($hour, $min, $sec, $day, $day_hour);
}

sub time_str {
    my ($time, $show) = @_;

    my ($hour, $min, $sec, $day, $day_hour) = time_parts($time);

    if ( @_ == 2 && (!$show || $show ne 'sec') ) {
        my $out = '';
        $out .= sprintf "%i day%s "   , $day     , $day      == 1 ? '' : 's';
        return $out if !$option{verbose};
        $out .= sprintf "%i hour%s "  , $day_hour, $day_hour == 1 ? '' : 's';
        return $out if $option{verbose} == 1;
        $out .= sprintf "%i minute%s ", $min     , $min      == 1 ? '' : 's';
        return $out if $option{verbose} == 2;
        $out .= sprintf "%i second%s ", $sec     , $sec      == 1 ? '' : 's';
        return $out;
    }

    return $show && $show eq 'sec' ? "$hour\:$min\:$sec" : "$hour\:$min";
}

sub time_trunc {
    my ( $time, $min ) = @_;

    my ($h, $m, $s) = time_parts($time);

    $m -= $m % $min;

    return $h * 60 * 60 + $m * 60;
}

{
    my $month_days = 20;
    my $week_days  = 5;
    my @month;
    my @week ;
    my @short_month;
    my @short_week;
    my @long_month;
    my @long_week;
    BEGIN {
        $month_days = 20;
        $week_days  = 5;
    };

    sub time_collector {
        my ($date, $time) = @_;
        my $full  = 0;
        my $count = 0;

        push @week, [ $date, $time ];
        if ( @week > $week_days ) {
            shift @week;
            my $hours = sprintf "%.1f", sum map { $_->[1] } @week;
            if ( $hours < $option{work_day} / HOUR * $week_days * ( 1 - $option{percent} / 100 ) ) {
                push @short_week, [ $week[0][0]->ymd, $hours ];
            }
            elsif ( $hours > $option{work_day} / HOUR * $week_days * ( 1 + $option{percent} / 100 ) ) {
                push @long_week, [ $week[0][0]->ymd, $hours ];
            }
        }
        push @month, [ $date, $time ];
        if ( @month > $month_days ) {
            shift @month;
            my $hours = sprintf "%.1f", sum map { $_->[1] } @month;
            if ( $hours < $option{work_day} / HOUR * $month_days * ( 1 - $option{percent} / 100 ) ) {
                push @short_month, [ $month[0][0]->ymd, $hours ];
            }
            elsif ( $hours > $option{work_day} / HOUR * $month_days * ( 1 + $option{percent} / 100 ) ) {
                push @long_month, [ $month[0][0]->ymd, $hours ];
            }
        }

        return;
    }

    sub time_display {
        if (@long_week) {
            print 'Long week' . ( @long_week > 1 ? 's = ' . @long_week : '' ) . ' (> ' . sprintf("%.1f", ( $option{work_day} / HOUR * $week_days * ( 1 + $option{percent} / 100 ) ) ) . " hours)\n";
            print colored( (join "\n", map { "$_->[0] => $_->[1]" } @long_week), 'green' ), "\n" if $option{verbose} > 4;
        }
        if (@long_month) {
            print 'Long month' . ( @long_month > 1 ? 's = ' . @long_month : '' ) . ' (> ' . sprintf("%.1f", ( $option{work_day} / HOUR * $month_days * ( 1 + $option{percent} / 100 ) ) ) . " hours)\n";
            print colored( (join "\n", map { "$_->[0] => $_->[1]" } @long_month), 'green' ), "\n" if $option{verbose} > 4;
        }
        if (@short_week) {
            print 'Short week' . ( @short_week > 1 ? 's = ' . @short_week : '' ) . ' (< ' . sprintf("%.1f", ( $option{work_day} / HOUR * $week_days * ( 1 - $option{percent} / 100 ) ) ) . " hours)\n";
            print colored( (join "\n", map { "$_->[0] => $_->[1]" } @short_week), 'red' ), "\n" if $option{verbose} > 4;
        }
        if (@short_month) {
            print 'Short month' . ( @short_month > 1 ? 's = ' . @short_month : '' ) . ' (< ' . sprintf("%.1f", ( $option{work_day} / HOUR * $month_days * ( 1 - $option{percent} / 100 ) ) ) . " hours)\n";
            print colored( (join "\n", map { "$_->[0] => $_->[1]" } @short_month), 'red' ), "\n" if $option{verbose} > 4;
        }

        return;
    }
}

{
    my ( $csv, $fh );
    sub get_fields {
        init();

        my $fields = $csv->getline($fh);
        if ( !$fields ) {
            close $fh;
            return;
        }

        return wantarray ? ( $fields, $fh->input_line_number ) : $fields;
    }

    sub get_csv {
        init();
        return $csv;
    }

    sub get_records {
        return `wc -l $file` =~ /(\d+)/xms;
    }

    sub init {
        if ( !$csv ) {
            open $fh, '<', $file or die "Could not open $file for reading: $OS_ERROR\n";
            $csv = Text::CSV_XS->new ({ binary => 1 });
        }
    }
}

__DATA__

=head1 NAME

hours - Track the hours worked

=head1 VERSION

This documentation refers to hours version 0.1.

=head1 SYNOPSIS

   hours [--history=... | --more* | --between=... ]
   hours stats ...
   hours add [--now=...]

 OPTIONS:
  -h --history[=]int
                 Count of the number days in to the past to go to
  -m --more      A simple way of showing more days, if specified:
                    once show the last month
                    twice this year
                    more  that many years
  -n --now[=]date
                 Use this date if
  -f --full      When listing only count full days/completed days
  -b --between[=][date1][:date2]
                 Show hours worked between the dates specified
                 if no second date specified shows dates after that date
                 if no first date (ie :date) show only entries before that date
  -r --round[=]int
                 Round to int minutes for start and finish times
  -m --format[=]str
                 Sets the format for displaying the data, see --man for details
                 (Default '%10day %6start %3lunch %6end %12avg %10total')
  -i --bin[=]int When very verbose is used the number of days works for a
                 particular length of time is shown, this option sets the
                 grouping size of hours worked in minutes (Default is 15 minutes)
  -p --percent[=]int
                 Turns on showing weeks/months that are more than this
                 percentage away from expected amount. Note a week is defined
                 as a 5 days of work in a row and a month is 20 days in a row.

  -v --verbose   Show more detailed option
     --VERSION   Prints the version information
     --help      Prints this help information
     --man       Prints the full documentation for hours

=head1 DESCRIPTION

=head2 Format

=head3 Fields

=over 4

=item day

The work day the record is about

=item lunch

The length of time spent at lunch

=item start

The time at which you started work

=item end

The time at which you left work

=item avg

The rolling average for the displayed period

=item total

The total hours worked

=item days

Weather the day is a full day (1) or a half day (0.5)

=item stddev

The standard deviation

=back

