use strict;
use warnings;
use version;
use Scalar::Util;
use List::Util;
#use List::MoreUtils;
use Getopt::Long;
use Pod::Usage;
use Data::Dumper qw/Dumper/;
use English qw/ -no_match_vars /;
use FindBin qw/$Bin/;
use Path::Tiny;

our $VERSION = version->new('0.0.1');
my ($name)   = $PROGRAM_NAME =~ m{^.*/(.*?)$}mxs;

my %option = (
    category => 'NA',
    dir      => "$ENV{HOME}/.tasks",
    number   => 10,
    verbose  => 0,
    man      => 0,
    help     => 0,
    VERSION  => 0,
);

if ( !@ARGV ) {
    pod2usage( -verbose => 1 );
}

main();
exit 0;

sub main {
    Getopt::Long::Configure('bundling');
    GetOptions(
        \%option,
        'category|c=s',
        'date|d=s',
        'time|t=s',
        'dir|d=s',
        'sort|s',
        'list|l',
        'number|n=i',
        'reverse|r',
        'verbose|v+',
        'man',
        'help',
        'VERSION!',
    ) or pod2usage(2);

    if ( $option{'VERSION'} ) {
        print "$name Version = $VERSION\n";
        exit 1;
    }
    elsif ( $option{'man'} ) {
        pod2usage( -verbose => 2 );
    }
    elsif ( $option{'help'} ) {
        pod2usage( -verbose => 1 );
    }

    # do stuff here
    my $time = $option{time};
    my $date = $option{date};

    my ($sec,$min,$hour,$mday,$mon,$year) = localtime(time);
    $year += 1900;
    $mon++;
    if (!$date) {
        $date = sprintf "%04d-%02d-%02d", $year, $mon, $mday;
    }
    if (!$time) {
        $time = sprintf "%02d:%02d:%02d", $hour, $min, $sec;
    }

    if ( ! -d $option{dir} ) {
        mkdir $option{dir};
    }

    my $file = "$option{dir}/$date";

    if ($option{sort}) {
        sort_file($file);
        exit 0;
    }
    elsif ($option{list}) {
        list($file, $option{number}, $option{reverse});
        exit 0;
    }

    open my $fh, '>>', $file;
    printf {$fh} "%s %s - %s - %s\n", $date, $time, $option{category}, join ' ', @ARGV;

    return;
}

sub sort_file {
    my ($file) = @_;
    open my $fh, '<', $file;
    my @lines = sort <$fh>;
    close $fh;
    open $fh, '>', $file;
    print {$fh} @lines;
    close $fh;
}

sub list {
    my ($file, $max, $reverse) = @_;
    open my $fh, '<', $file;
    my @lines = sort <$fh>;

    if ($reverse) {
        @lines = reverse @lines;
    }

    print $max < @lines ? @lines[-$max .. -1] : @lines;
}

__DATA__

=head1 NAME

bin/task-switch - <One-line description of commands purpose>

=head1 VERSION

This documentation refers to bin/task-switch version 0.0.1

=head1 SYNOPSIS

   task-switch [--d|--date YYYY-MM-DD] [-t|--time HH:MM:SS] (-c|--category category) task description
   task-switch [--d|--date YYYY-MM-DD] [-t|--time HH:MM:SS] (-s|--sort)
   task-switch [--d|--date YYYY-MM-DD] [-t|--time HH:MM:SS] (-l|--list) [-n int] [-r|--reverse]

 OPTIONS:
   -c --category    The task category
   -d --date        Use an alternative date (YYYY-MM-DD)
   -t --time        Use an alternitave time (HH:MM:SS)
   -s --sort        Sort the days items (may be desired if adding past tasks)
   -l --list        List the recent tasks
   -n --number      Limit the list of recent tasks (Default 10)
   -r --reverse     Reverse the order of recent tasks

  -v --verbose       Show more detailed option
     --version       Prints the version information
     --help          Prints this help information
     --man           Prints the full documentation for bin/task-switch

