use strict;
use warnings;
use version;
use Scalar::Util;
use List::Util;
use Getopt::Long;
use Pod::Usage;
use Data::Dumper qw/Dumper/;
use English qw/ -no_match_vars /;
use FindBin qw/$Bin/;
use Path::Class;

our $VERSION = version->new('0.0.1');
my ($name)   = $PROGRAM_NAME =~ m{^.*/(.*?)$}mxs;

my %option = (
    out     => undef,
    verbose => 0,
    man     => 0,
    help    => 0,
    VERSION => 0,
);

if ( !@ARGV ) {
    pod2usage( -verbose => 1 );
}

main();
exit 0;

sub main {

    Getopt::Long::Configure('bundling');
    GetOptions(
        \%option,
        'test|t!',
        'verbose|v+',
        'man',
        'help',
        'VERSION!',
    ) or pod2usage(2);

    if ( $option{'VERSION'} ) {
        print "$name Version = $VERSION\n";
        exit 1;
    }
    elsif ( $option{'man'} ) {
        pod2usage( -verbose => 2 );
    }
    elsif ( $option{'help'} ) {
        pod2usage( -verbose => 1 );
    }

    # do stuff here
    my @install = @ARGV;
    my %packages;

    for my $module (@install) {

        # normalize to standard Perl module names.
        if ( $module =~ /[.]pm$/ ) {
            $module =~ s/[.]pm$//;
            $module =~ s{/}{::}g;
        }

        $packages{$module} = apt_package($module);

        # in no apt package check if any dependencies can be installed via apt
        if ( !$packages{$module} ) {
            push @install, dependencies($module);
        }
    }

    my @packages = grep { $packages{$_} } keys %packages;
    my @cpan     = grep {!$packages{$_} } keys %packages;

    print "sudo apt-get install " . join ' ', @packages;
    print "\n\n";

    print "sudo cpanm " . join ' ', @cpan;
    print "\n\n";

    sleep 1;

    if ( !$option{test} ) {
        system qw/sudo apt-get install/, @packages if @packages;
        system qw/sudo cpanm/,           @cpan     if @cpan;
    }

    return;
}

sub apt_package {
    my ($module) = @_;
    my $package = lc "lib$module-perl";
    $package =~ s/::/-/g;
    $package =~ s/_/-/g;

    my $cache = `apt-cache search $package`;

    return $cache =~ /^$package\s+-\s+/ ? $package : undef;
}

my $mcpan;
my $failed;
sub dependencies {
    my ($module) = @_;

    # only run this if we can start MetaCPAN::API
    eval { require MetaCPAN::API } if !$failed || $mcpan;
    if ( $@ || $failed ) {
        warn "MetaCPAN::API is not installed better results are acheived if it is\n" if !$failed++;
        return;
    }

    $mcpan ||= MetaCPAN::API->new;

    my $module_details = $mcpan->module($module);
    my $dist_details   = $mcpan->release( distribution => $module_details->{distribution} );
    my @dependencies   = @{ $dist_details->{dependency} };
    my %depends;
    my %seen;

    while ( my $dependency = shift @dependencies) {
        next if $seen{$dependency->{module}}++;

        my $module_details = $mcpan->module($dependency->{module});

        next if $depends{$module_details->{distribution}}++;

        my $dist_details   = $mcpan->release( distribution => $module_details->{distribution} );
        push @dependencies, @{ $dist_details->{dependency} };
    }

    return keys %depends;
}

__DATA__

=head1 NAME

apt-perl - Installs perl dependencies from apt (if possible) otherwise uses cpanm.

=head1 VERSION

This documentation refers to apt-perl version 0.0.1

=head1 SYNOPSIS

   apt-perl [option] (module|dist|file) ...

 OPTIONS:
  -o --other         other option

  -v --verbose       Show more detailed option
     --version       Prints the version information
     --help          Prints this help information
     --man           Prints the full documentation for apt-perl



